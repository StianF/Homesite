<% title "Employments" %>

<table>
  <tr>
    <th>Company</th>
    <th>From</th>
    <th>To</th>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% for employment in @employments %>
    <tr>
      <td><%= employment.company %></td>
      <td><%= employment.from %></td>
      <td><%= employment.to %></td>
      <td><%= employment.title %></td>
      <td><%= employment.description %></td>
      <td><%= link_to "Show", employment %></td>
      <td><%= link_to "Edit", edit_employment_path(employment) %></td>
      <td><%= link_to "Destroy", employment, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to "New Employment", new_employment_path %>
