<% title (I18n.locale.to_s == 'no')?"Jobb":"Employments" %>

<table>
  <% for employment in @employments %>
    <tr>
      <td>
      <h4><%= employment.company %></h4><br />
      <%= employment.title %><br />
      <%= employment.from_to_str %><br />
      <p><i><%= (I18n.locale.to_s == 'no')?"#{employment.description_no}":"#{employment.description_en}"%></i></p>
      <%= link_to "Show", employment %>
      <% if current_user %>
      <%= link_to "Edit", edit_employment_path(employment) %>
      <%= link_to "Destroy", employment, :confirm => 'Are you sure?', :method => :delete %>
      <%end%>
      </td>
    </tr>
  <% end %>
</table>

<br />
<% if current_user %>
  <%= link_to "New Employment", new_employment_path %>
<% end %>
